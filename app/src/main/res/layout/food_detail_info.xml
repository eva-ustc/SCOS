<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_foodDetailInfo_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_food1"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:id="@+id/ll_foodname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/iv_foodDetailInfo_image">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#408fde"
            android:textSize="30sp"
            android:text="菜名:"
            />
        <TextView
            android:id="@+id/tv_foodDetailInfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#408fde"
            android:textSize="30sp"
            android:text="炭烤母猪蹄"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_foodname"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#408fde"
            android:textSize="30sp"
            android:text="菜价:"
            />
        <TextView
            android:id="@+id/tv_foodDetailInfo_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#408fde"
            android:textSize="30sp"
            android:text="25.0元"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_price"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注信息:"
            android:textColor="#408fde"
            android:textSize="30sp"/>
        <EditText
            android:id="@+id/et_foodDetailInfo_comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_itemAddOrDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_comment"
        android:text="点菜"
        />

</RelativeLayout>