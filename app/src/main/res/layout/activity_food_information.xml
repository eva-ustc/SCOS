<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_foodInfo_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_food1"
        android:layout_centerInParent="true"
        />
    <TextView
    android:id="@+id/tv_foodInfo_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/iv_foodInfo_image"
    android:textColor="#408fde"
    android:textSize="30sp"
    android:text="sssssss"
    />
    <TextView
        android:id="@+id/tv_foodInfo_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_foodInfo_name"
        android:textColor="#408fde"
        android:textSize="30sp"
        android:text="ssssss"
        />
</RelativeLayout>